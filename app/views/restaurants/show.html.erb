<div style="padding: 40px">


<p><i class="fa fa-align-justify"></i>    <%= @restaurant.name %></p>
<p><i class="fa fa-map-marker"></i>    <%= @restaurant.address %></p>
<p><i class="fa fa-cutlery"></i>    <%= @restaurant.category %></p>
<p><i class="fa fa-phone"></i>   <%= @restaurant.phone_number %></p>

<div>
<% @restaurant.reviews.each do |review| %>
<ul>

<li style="list-style: none"><p>Rating: <%= review.rating %></p>
<p><%= review.content %></p></li>

</ul>
<% end %>
</div>


<p><%= link_to "write a review", new_restaurant_review_path(@restaurant) %> </p>
<p><%= link_to "back to main page", root_path %>

</div>
